---
// types
import { ICharacter } from '@localTypes/characters';
interface Props {
  title?: string;
  items: ICharacter[];
}
// components
import CharacterCard from '@components/CharacterCard.astro';

// code
const { title, items }: Props = Astro.props;
---
{ title ? <h2 class="font-mona text-7xl uppercase mt-16 mb-10">{title}</h2> : null }
<div class="grid grid-cols-1 tablet:grid-cols-2 laptop:grid-cols-4 wide:grid-cols-5 gap-5">
  {
  items.map(({name, image, status, id }: Omit<ICharacter, "species" | "type" | "gender">) => {
      return
        <CharacterCard
          id={id}
          name={name}
          image={image}
          status={status}
        />
    })
  }
</div>
